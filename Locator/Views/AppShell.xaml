<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Locator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Locator.Views"
    Title="Locator">

    <FlyoutItem Title="Settings" >
        <Tab>
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Send" >
        <Tab>
        <ShellContent Title="Send" ContentTemplate="{DataTemplate local:SendPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Receive" >
        <Tab>
            <ShellContent Title="Receive" ContentTemplate="{DataTemplate local:ReceivePage}" />
        </Tab>
    </FlyoutItem>
</Shell>
